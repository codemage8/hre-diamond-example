{
  "plugins": ["prettier-plugin-solidity", "@trivago/prettier-plugin-sort-imports"],
  "printWidth": 100,
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "useTabs": false,
  "importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
  "importOrderCaseInsensitive": false,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 125,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    }
  ]
}
